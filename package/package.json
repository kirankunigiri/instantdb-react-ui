{
	"name": "instantdb-react-ui",
	"description": "Customizable react components for InstantDB (forms/lists/etc.)",
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/kirankunigiri/instantdb-react-ui",
		"directory": "package"
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		"import": "./dist/index.mjs",
		"require": "./dist/index.js"
	},
	"files": ["dist"],
	"scripts": {
		"build": "tsup src/index.ts --format cjs,esm --dts",
		"release": "bun run build && npm publish",
		"lint": "tsc"
	},
	"keywords": [
		"react",
		"instantdb",
		"forms",
		"lists",
		"tables",
		"form-validation"
	],
	"author": "Kiran Kunigiri",
	"license": "MIT",
	"peerDependencies": {
		"@instantdb/react": "^0.17.0",
		"@mantine/form": "^7.0.0",
		"@tanstack/react-form": "0.42.0",
		"@tanstack/zod-form-adapter": "^0.42.0",
		"mantine-form-zod-resolver": "^1.0.0",
		"react": ">=18.0.0",
		"zod": "^3.0.0"
	},
	"devDependencies": {
		"@types/react": "^19.0.8",
		"tsup": "^8.3.6",
		"typescript": "^5.7.3"
	}
}
